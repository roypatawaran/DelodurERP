<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;"> Create New Product Entry (Batch) </h1>
        <div style="width: 30%; margin: 30px auto;">
            <form id="formid" action="/batch" method="POST">
            	<div class="form-group">
                   <input readonly class="form-control" name="productNum" type="text" value="<%=prod.productNum%>"> 
                </div>
                <div class="form-group">
                    <select id="S00" name="supplier">
                    	  <option disabled selected value> -- Select Supplier -- </option>
                          <% suppliers.forEach(function(supp){ %>
                          <option  value="<%=supp.supplierName %>"> <%=supp.supplierName%></option>
                          <% }); %>
                    </select>
                </div>
                <div  class="form-group">
                    <input id="C01" class="form-control" name="invoiceNum" type="text" placeholder="Invoice Number">
                </div>
                <div class="form-group">
                    <input id="C02" class="form-control" name="lineNum" type="text" placeholder="Line Number">
                </div>
                <div class="form-group">
                    <input readonly class="form-control" name="entryDate" type="text" placeholder="Entry Date" value="<%=date%>">
                </div>
                <div class="form-group">
                    <input id="batchCode" readonly class="form-control" name="batchCode" type="text" placeholder="Batch Code" readonly>
                </div>
                <div class="form-group">
                    <input class="form-control" name="brand" type="text" placeholder="Brand">
                </div>
                <div class="form-group">
                    <input class="form-control" name="oemNum" type="text" placeholder="OEM Number">
                </div>
                <div class="form-group">
                    <input class="form-control" name="acqCost" type="text" placeholder="Acquisition Cost">
                </div>
                
                <div class="form-group">
                    <select name="currency">
                          <option value="PHP">₱</option>
                          <option value="USD">$</option>
                          <option value="EURO">€</option>
                          <option value="SGD">SGD</option>
                    </select>
                </div>

                <div class="form-group">
                    <input class="form-control" name="exRate" type="text" placeholder="Exchange Rate">
                </div>
                <div class="form-group">
                    <input class="form-control" name="landedCost" type="text" placeholder="Landed Cost">
                </div>
                <div class="form-group">
                    <input class="form-control" name="SRP" type="text" placeholder="SRP">
                </div>
                <div class="form-group">
                    <input class="form-control" name="QTY" type="text" placeholder="Quantity">
                </div>
                <div class="form-group">
                    <input class="form-control" name="lastBatchCodeDate" type="text" placeholder="Last Batch Code Date">
                </div>
                <div class="form-group">
                    <input class="form-control" name="remarks" type="text" placeholder="remarks">
                </div>

               <!--  <div id="inpgrp" class="form-group">
                    <input id="alternatives" class="form-control" name="alternativesph" type="text" placeholder="Alternatives">
                </div> -->

                <button type="submit" class="btn btn-primary btn-lg">SUBMIT</button>
            </form>
            <a style="text-align: center;" href="/">Go Back</a>
        </div>
    </div>

</div>

<script src="/js/inputBatch.js"></script>

<% include partials/footer %>
